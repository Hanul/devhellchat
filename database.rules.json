{
	/* Visit https://firebase.google.com/docs/database/security to learn more about security rules. */
	"rules": {
		"connections": {
			".read": "auth !== null",
			".write": "auth !== null"
		},
		"connections-discord": {
			".read": "auth !== null",
			".write": "auth !== null"
		},
		"chats": {
			".read": "auth !== null",
			"$chat": {
				".write": "auth !== null",
				".validate": "newData.child('userId').val() === null || newData.child('userId').val() === auth.uid"
			}
		},
		"users": {
			".read": "auth !== null",
			"$id": {
				".write": "$id === auth.uid && data.child('exp').val() <= newData.child('exp').val()"
			}
		},
		"ugay": {
			".read": "auth !== null",
			"$id": {
				".write": "auth !== null"
			}
		}
	}
}